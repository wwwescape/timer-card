{
   "compilerOptions": {
      "experimentalDecorators": true,
      "module": "CommonJS",
      "noImplicitAny": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "moduleResolution": "Node",
      "target": "es6",
      "plugins": [
         {
            "transform": "ts-auto-mock/transformer",
            "cacheBetweenTests": false
         }
      ],
      "paths": {
         "jest-ts-auto-mock": [
            "../../index"
         ]
      }
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules",
      "**/*.spec.ts"
   ]
}